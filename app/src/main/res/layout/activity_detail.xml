<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.detail.DetailActivity">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtLayoutNameFood"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtNameFood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="nombre del plato"
                    android:inputType="textPersonName"


                    android:maxLines="1"

                    android:nextFocusLeft="@+id/txtIngredientesFood"
                    android:nextFocusRight="@+id/txtIngredientesFood"
                    android:nextFocusUp="@+id/txtIngredientesFood"
                    android:nextFocusDown="@+id/txtIngredientesFood"
                    android:nextFocusForward="@+id/txtIngredientesFood" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtLayoutIngredientesFood"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtIngredientesFood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ingredientes"
                    android:inputType="textPersonName"
                    android:maxLines="1"

                    android:nextFocusLeft="@+id/txtPrice"
                    android:nextFocusRight="@+id/txtPrice"
                    android:nextFocusUp="@+id/txtPrice"
                    android:nextFocusDown="@+id/txtPrice"
                    android:nextFocusForward="@+id/txtPrice" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtLayoutPrice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="precio del plato"
                    android:inputType="number"
                    android:maxLines="1"

                    android:nextFocusLeft="@+id/txtPass"
                    android:nextFocusRight="@+id/txtPass"
                    android:nextFocusUp="@+id/txtPass"
                    android:nextFocusDown="@+id/txtPass"
                    android:nextFocusForward="@+id/txtPass" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtLayoutTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tiempo de preparacion"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/btnGetOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pedir" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />

            <Button

                android:id="@+id/btnNewFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New" />

            <Button
                android:id="@+id/btnUpdateFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancelar" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>



